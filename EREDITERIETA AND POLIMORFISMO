




class Mezzo_trasporto:
    def __init__(self):
        pass 
    def saluto(self):
        pass


class Route4 (Mezzo_trasporto):
    def __init__(self,ruote):
        super().__init__()
        self.route = ruote
    
    def saluto (self):
        print(f'il tuo mezzo ha {self.ruote} route ed è piu probabile che sia un\'auto')
        
class Route2 (Mezzo_trasporto):
    def __init__(self,ruote):
        super().__init__()
        self.ruote = ruote
    
    def saluto (self):
        print(f'il tuo mezzo ha {self.ruote} route ed è piu probabile che sia una moto o una bici')

      
               
class Moto (Route2):
    def __init__(self,ruote,marca,velocita):
        super().__init__(ruote)
        self.marca = marca
        self.velocita = velocita
    
    def saluto(self):
        print(f'questa vettura ha {self.ruote} route quindi è una moto marca : {self.marca} ed ha una velocita massima di: {self.velocita} km\h')
        
class Macchina (Route4):
    def __init__(self,ruote,marca,velocita):
        super().__init__(ruote)
        self.marca = marca 
        self.velocita = velocita
    
    def saluto(self):
        print(f'questa vettura ha {self.route} route quindi è una macchina, marca : {self.marca} ed ha una velocita massima di: {self.velocita} km\h')

          
#polimorfismo

macchina1 = Macchina(4,'Audi',200)
macchina1.saluto()

moto1 = Moto(2,'Yamaha',125)
moto1.saluto()


